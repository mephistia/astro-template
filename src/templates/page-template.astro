---
type Props = {
  title: string
  description?: string
}

const { title, description = '' } = Astro.props

import '@/styles/global-styles.scss'
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, maximum-scale=1.0"
    />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
